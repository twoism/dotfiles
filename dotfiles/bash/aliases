# directories
alias ..="cd .."
alias b="cd .."
function mkcd() {
	mkdir -p $1
	cd $1
}
function rails_heft(){
  for file in $(find app/$1/**/*.rb -type f); do wc -l $file ; done  | sort -r | head
}
